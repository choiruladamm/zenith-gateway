{
  "name": "zenith-gateway",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target=bun",
    "db:generate": "drizzle-kit generate",
    "db:push": "bun --env-file=.env drizzle-kit push",
    "db:migrate": "bun --env-file=.env drizzle-kit migrate",
    "db:seed": "bun --env-file=.env run src/db/seed.ts",
    "db:generate-key": "bun --env-file=.env run scripts/generate-key.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@upstash/redis": "^1.36.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "pino": "^10.1.0",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
