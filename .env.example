# Server Configuration
PORT=3000

# Database Configuration (PostgreSQL/Neon)
DATABASE_URL=postgres://user:password@hostname:5432/dbname?sslmode=require

# Redis Configuration (Upstash)
UPSTASH_REDIS_URL=https://your-instance.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_token

# Proxy Configuration (Security)
# Comma-separated list of allowed domains (e.g., api.openai.com,jsonplaceholder.typicode.com)
# Leave empty to allow all domains (NOT RECOMMENDED for production)
ALLOWED_DOMAINS=

# RFC 7807 Error Configuration
# Base URL for error identifiers
PROBLEM_BASE_URL=http://localhost:3000
